{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "cafe_backend/**"
        ]
    },
    "deploy": {
        "startCommand": "node index.js",
        "restartPolicyType": "ON_FAILURE",
        "rootDirectory": "cafe_backend",
        "healthCheckPath": "/health"
    }
}